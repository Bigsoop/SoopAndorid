<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/uni_name_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:text="스탠포드대학교"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/uni_mark_content"/>

            <ImageView
                android:layout_toRightOf="@+id/uni_name_content"
                android:layout_width="12.5dp"
                android:layout_height="12.5dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/school"/>

            <ImageView
                android:id="@+id/uni_mark_content"
                android:layout_width="37.5dp"
                android:layout_height="37.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/stanford"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"/>

            <TextView
                android:id="@+id/main_date_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                tools:text="2017년 2월 15일 오후 9:37"
                android:layout_below="@+id/uni_name_content"
                android:layout_toRightOf="@+id/uni_mark_content"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/body_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1080"
                android:textSize="12dp"
                android:textColor="#000000"
                tools:text="우리학교 솔직히 지잡대아님? 자꾸 세계 1류 대학인척 하는데 무슨 소리인지 모르겠다는 것은 사실 페이크였고 우리학교는 세계 최고의 대학교인건 솔직히ㅇㅈ? ㄹㅇㅍㅌ ?? ㅂㅂㅂㄱ?? ㅇㅇ ㅇㅇㅈ"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="2.5dp"
                android:id="@+id/like_linear"
                android:layout_marginLeft="17.5dp"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="@drawable/selector_btn_click"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:background="@drawable/like"></ImageView>

               <TextView
                    android:id="@+id/like_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:text="좋아요 100명"/>
            </LinearLayout>

            <LinearLayout
                android:padding="2.5dp"
                android:id="@+id/comment_linear"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="@drawable/selector_btn_click"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/share_linear"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:background="@drawable/comment"/>

                <TextView
                    android:id="@+id/comment_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:text="댓글 20개"/>
            </LinearLayout>

            <LinearLayout
                android:padding="2.5dp"
                android:id="@+id/share_linear"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="@drawable/selector_btn_click"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="12.5dp"
                    android:layout_height="12.5dp"
                    android:background="@drawable/share"/>

                <TextView
                    android:id="@+id/share_content"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:textColor="#000000"
                    android:text="공유 20회"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
