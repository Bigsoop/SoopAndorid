<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/uni_mark_content"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/stanford"/>

            <TextView
                android:id="@+id/uni_name_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                tools:text="스탠포드대학교"
                android:layout_toRightOf="@id/uni_mark_content"/>

            <TextView
                android:id="@+id/main_date_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                tools:text="2017년 2월 15일 오후 9:37"
                android:layout_below="@+id/uni_name_content"
                android:layout_toEndOf="@+id/uni_mark_content"/>

            <ImageView
                android:layout_toRightOf="@+id/uni_name_content"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/school"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="190"/>

            <TextView

                android:id="@+id/body_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1080"
                android:textSize="13dp"
                tools:text="우리학교 솔직히 지잡대아님? 자꾸 세계 1류 님? 자꾸 세계 1류 대학 인척하는데 왜그러는지 "/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"/>

        </LinearLayout>


        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:padding="2.5dp"
                android:id="@+id/like_comment"
                android:layout_marginLeft="17.5dp"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="#cbf4e0"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="@drawable/like"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="좋아요 100명"
                    android:id="@+id/textView5"/>
            </LinearLayout>

            <LinearLayout
                android:padding="2.5dp"
                android:id="@+id/share"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="#cbf4e0"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="@drawable/share"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="공유 20회"
                    android:id="@+id/textView4"/>
            </LinearLayout>

            <LinearLayout
                android:padding="2.5dp"
                android:id="@+id/comment_content"
                android:layout_width="wrap_content"
                android:layout_height="23dp"
                android:background="#cbf4e0"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/share"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:background="@drawable/comment"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="댓글 20개"/>
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
