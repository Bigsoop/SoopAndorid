<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30dp"
    android:layout_marginBottom="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:id="@+id/textView3"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="150">

            <ImageView
                android:id="@+id/uni_mark"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/logo"/>

            <TextView
                android:id="@+id/uni_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                tools:text="스탠포드대학교"
                android:layout_toRightOf="@id/uni_mark"/>

            <ImageView
                android:layout_toRightOf="@+id/uni_name"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/arrow_right"/>

            <TextView
                android:id="@+id/story_order"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                tools:text="#2020번째 글"
                android:layout_below="@+id/uni_name"
                android:layout_toEndOf="@+id/uni_mark"/>

            <ImageView
                android:id="@+id/likeImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_right"
                android:layout_alignBottom="@+id/story_order"
                android:layout_toStartOf="@+id/like"/>

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                tools:text="105042"
                android:layout_alignBottom="@+id/story_order"
                android:layout_toStartOf="@+id/commentImg"/>

            <ImageView
                android:id="@+id/commentImg"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/arrow_right"
                android:layout_alignBottom="@+id/story_order"
                android:layout_toStartOf="@+id/comment"/>

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                tools:text="121515"
                android:layout_marginEnd="15dp"
                android:layout_alignBottom="@+id/like"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="150"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="190"/>

            <TextView
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:layout_weight="1080"
               android:textSize="20dp"
               tools:text="우리학교 솔직히 지잡대아님? 자꾸 세계 1류 대학 인척하는데 무슨소리인지 모르겠..............."/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
