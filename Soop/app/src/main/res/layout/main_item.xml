<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="25"
            android:id="@+id/textView3"/>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="150">

            <ImageView
                android:id="@+id/uni_mark"
                android:layout_width="37.5dp"
                android:layout_height="37.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/stanford"/>

            <TextView
                android:id="@+id/uni_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="#000000"
                tools:text="스탠포드대학교"
                android:layout_toRightOf="@id/uni_mark"/>

            <TextView
                android:id="@+id/main_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                tools:text="2017년 2월 15일 오후 9:37"
                android:layout_below="@+id/uni_name"
                android:layout_toRightOf="@+id/uni_mark"/>

            <ImageView
                android:layout_toRightOf="@+id/uni_name"
                android:layout_width="12.5dp"
                android:layout_height="12.5dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/school"/>

            <ImageView
                android:id="@+id/commentImg"
                android:layout_width="12.5dp"
                android:layout_height="12.5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/comment"
                android:layout_alignBottom="@+id/main_date"
                android:layout_toLeftOf="@+id/comment"/>

            <ImageView
                android:id="@+id/likeImg"
                android:layout_width="12.5dp"
                android:layout_height="12.5dp"
                android:src="@drawable/like"
                android:layout_marginRight="5dp"
                android:layout_alignBottom="@+id/main_date"
                android:layout_toLeftOf="@+id/like"/>

            <TextView
                android:id="@+id/comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="121515"
                android:textColor="#000000"
                android:textSize="11dp"
                android:layout_marginRight="15dp"
                android:layout_alignBottom="@+id/main_date"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="11dp"
                tools:text="105042"
                android:textSize="11dp"
                android:textColor="#000000"
                android:layout_alignBottom="@+id/main_date"
                android:layout_toLeftOf="@+id/commentImg"
                android:layout_toStartOf="@+id/commentImg"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="150"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="45dp"
                android:id="@+id/body"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1080"
                android:textSize="13dp"
                android:maxLines="8"
                android:ellipsize="end"
                android:textColor="#000000"
                tools:text="우리학교 솔직히 지잡대아님? 자꾸 세계 1류 대학 인척하는데 왜그러는지 "/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="50"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="55"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
