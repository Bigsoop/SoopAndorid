<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#426d47"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="174dp"
        android:background="@drawable/profile_background"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingTop="40dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:theme="@style/ThemeOverlay.AppCompat.Dark">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/profile_boarder"
            android:layout_gravity="center_horizontal"
            android:padding="1dp">
        <ImageView
            android:src="@drawable/profile_person"
            android:layout_gravity="center_horizontal"
            android:layout_width="62.5dp"
            android:layout_height="62.5dp"
            android:id="@+id/img_profile"
            />
        </LinearLayout>

        <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textStyle="bold"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="로그인이 필요합니다."
                android:textColor="#ffffff"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/txt_profile"/>
        </LinearLayout>
    </LinearLayout>
